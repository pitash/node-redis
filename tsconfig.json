{
  "compilerOptions": {
    "target": "ES2020",                   // Modern JS target
    "module": "ESNext",                    // Use ES modules
    "moduleResolution": "Node",            // Resolve modules like Node.js
    "esModuleInterop": true,               // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // Enable strict type-checking
    "skipLibCheck": true,                  // Skip type checks of node_modules
    "resolveJsonModule": true,             // Allow importing JSON files
    "outDir": "dist",                      // Output folder for compiled JS
    "rootDir": ".",                         // Root directory of source
    "noImplicitAny": true                  // Disallow implicit any type
  },
  "include": ["./**/*.ts"],                // Include all TS files
  "exclude": ["node_modules", "dist"]      // Exclude node_modules & dist
}


